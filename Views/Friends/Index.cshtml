@model IEnumerable<dejtingsajt.Models.Friend>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Identity/Pages/_ViewStart.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.isConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receiver)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.isConfirmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.friendId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.friendId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.friendId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
